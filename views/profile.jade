if user.fbId
    h1 #{user.name}'s Profile
    table
        thead
            tr
                th key
                th value
        tbody
            tr
                td name
                td #{user.name}
            tr
                td email
                td #{user.email}
            tr
                td fbId
                td #{user.fbId}
            tr
                td avatar
                td
                    img(src="#{user.avatar}")
else
    h1 #{user.name}'s Profile
    table
        thead
            tr
                th key
                th value
        tbody
            tr
                td name
                td #{user.name}
            tr
                td email
                td #{user.email}
            tr
                td avatar
                td
                    img(src="#{user.avatar}")
            tr
                td salt
                td #{user.salt}
            tr
                td hash
                td #{user.hash}


