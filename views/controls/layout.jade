!!! 5
html(ng-app="WebCar", lang="de")
    head
        title WebCar
        meta(http-equiv="Content-Type",content="text/html; charset=UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="WebCar")
        meta(name="author", content="Lisa Maria Lederer, Sebastian Slamanig, Michael Poschacher")

        link(type="image/x-icon", rel="icon", href="/favicon.ico")
        link(type="image/x-icon", rel="shortcut icon", href="/favicon.ico")
        
        != css("controls.css")

    body
        block content
// Include our Scripts. See /assets/js.
// ============================================================================
// Load jQuery
!= js("lib/jquery-2.0.0.min")
!= js("lib/keydrown")
if control == "gyro"
   if is_tablet
       != js("control/sensors_tablet.js")
    else
       != js("control/sensors")
else if control == "keyboard"
    != js("control/keypress2")
else if control == "keyboard2"
    != js("control/keypress")
else if control == "joystick"
    != js("control/joystick")
    != js("lib/joystickLib")