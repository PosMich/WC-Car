<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".WebCarReleaseActivity" >
    
    <RelativeLayout
        android:background="#333333"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="0dp"
	        android:layout_centerInParent="true"
	        android:orientation="horizontal"
	        android:padding="10dp" >

	        <Button
	            android:id="@+id/btnHome"
	            android:layout_width="101dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:background="#111111"
	            android:padding="10dp"
	            android:text="@string/home"
	            android:textColor="#DDDDDD"
	            android:textSize="18sp" />
	
	        <ImageView
	            android:id="@+id/logo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:contentDescription="@string/logoContentDescription"
	            android:src="@drawable/ic_launcher" />
	
	        <Button
	            android:id="@+id/btnCreditScreen"
	            android:layout_width="101dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:background="#111111"
	            android:padding="10dp"
	            android:text="@string/credit"
	            android:textColor="#DDDDDD"
	            android:textSize="18sp" />
	    </LinearLayout>
	    
	</RelativeLayout>
    
    <TextView
        android:id="@+id/textReleaseHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:keepScreenOn="true"
        android:text="@string/release_heading"
        android:textColor="#333333"
        android:textSize="40sp"
        android:textStyle="bold" 
        android:layout_weight="0"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp" 
        android:layout_weight="0">

        <TextView
            android:id="@+id/textReleaseStepOne_Passphrase"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:keepScreenOn="true"
            android:text="@string/release_step_passphrase_heading"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" >
            
            <EditText
                android:id="@+id/editTextPassphrase"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingRight="35dp" />

            <ImageView
                android:id="@+id/imageStatusPassphrase"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:contentDescription="@string/content_descr_image_status"
                android:src="@drawable/error" 
                android:visibility="gone" />
            
        </FrameLayout>
    </LinearLayout>
    
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="10dp" 
	    android:layout_weight="0">

        <TextView
            android:id="@+id/textReleaseStepOne_PassphraseReEnter"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:keepScreenOn="true"
            android:text="@string/release_step_passphrase_reenter_heading"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />
        
       <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" >

	        <EditText
	            android:id="@+id/editTextPassphraseReenter"
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:ems="10"
	            android:inputType="textPassword"
	            android:paddingRight="35dp" />
	        
			<ImageView
			    android:id="@+id/imageStatusPassphraseReentered"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:layout_gravity="right|center_vertical"
			    android:layout_marginRight="5dp"
			    android:contentDescription="@string/content_descr_image_status"
			    android:src="@drawable/error"
			    android:visibility="gone" />
			
		</FrameLayout>
        
    </LinearLayout>
    
  	 <Button
	    android:id="@+id/btnConfirmPassphrase"
	    android:layout_width="101dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:background="#111111"
	    android:padding="10dp"
	    android:layout_marginRight="10dp"
	    android:text="@string/confirm_passphrase" 
	    android:textColor="#DDDDDD"
	    android:textSize="18sp"
	    android:layout_weight="0" />
    
    <TextView
        android:id="@+id/textPassphraseInfo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:gravity="bottom|center_horizontal"
        android:padding="5dp"
        android:text="@string/passphrase_info"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#888888"
        android:layout_marginBottom="20dp"/>

</LinearLayout>