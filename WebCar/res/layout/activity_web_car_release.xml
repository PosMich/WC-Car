<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0099cc"
    android:orientation="vertical"
    tools:context=".WebCarReleaseActivity" >
    
    <TextView
        android:id="@+id/textReleaseHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:keepScreenOn="true"
        android:text="@string/release_heading"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:textStyle="bold" 
        android:layout_weight="0"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:padding="10dp" 
        android:layout_weight="0">

        <TextView
            android:id="@+id/textReleaseStepOne_Passphrase"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:keepScreenOn="true"
            android:text="@string/release_step_passphrase_heading"
            android:textColor="#CEEDF9"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" >
            
            <EditText
	            android:id="@+id/editTextPassphrase"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:ems="10"
	            android:inputType="textPassword"
	            android:paddingRight="35dp" />

            <ImageView
                android:id="@+id/imageStatusPassphrase"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:contentDescription="@string/content_descr_image_status"
                android:src="@drawable/error" 
                android:visibility="gone" />
            
        </FrameLayout>

        
        
    </LinearLayout>
    
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="10dp" 
	    android:layout_weight="0">

        <TextView
            android:id="@+id/textReleaseStepOne_PassphraseReEnter"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:keepScreenOn="true"
            android:text="@string/release_step_passphrase_reenter_heading"
            android:textColor="#CEEDF9"
            android:textSize="20sp"
            android:textStyle="bold" />
        
       <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" >

	        <EditText
	            android:id="@+id/editTextPassphraseReenter"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:ems="10"
	            android:inputType="textPassword" 
	            android:paddingRight="35dp" />
	        
			<ImageView
			    android:id="@+id/imageStatusPassphraseReentered"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:layout_gravity="right|center_vertical"
			    android:layout_marginRight="5dp"
			    android:contentDescription="@string/content_descr_image_status"
			    android:src="@drawable/error"
			    android:visibility="gone" />
			
		</FrameLayout>
        
    </LinearLayout>

    <Button
        android:id="@+id/btnConfirmPassphrase"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:text="@string/confirm_passphrase" 
        android:layout_weight="0"/>
    
    <TextView
        android:id="@+id/textPassphraseInfo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:gravity="bottom|center_horizontal"
        android:padding="5dp"
        android:text="@string/passphrase_info"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>