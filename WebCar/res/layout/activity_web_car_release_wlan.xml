<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".WebCarReleaseWLANActivity" >
    
    <RelativeLayout
        android:background="#333333"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="0dp"
	        android:layout_centerInParent="true"
	        android:orientation="horizontal"
	        android:padding="10dp" >
	
	        <Button
	            android:id="@+id/btnHome"
	            android:layout_width="101dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:background="#111111"
	            android:padding="10dp"
	            android:text="@string/home"
	            android:textColor="#DDDDDD"
	            android:textSize="18sp" />
	
	        <ImageView
	            android:id="@+id/logo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:contentDescription="@string/logoContentDescription"
	            android:src="@drawable/ic_launcher" />
	
	        <Button
	            android:id="@+id/btnCreditScreen"
	            android:layout_width="101dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:background="#111111"
	            android:padding="10dp"
	            android:text="@string/credit"
	            android:textColor="#DDDDDD"
	            android:textSize="18sp" />
	    </LinearLayout>
	    
	</RelativeLayout>

    <TextView
        android:id="@+id/textReleaseWLANHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:keepScreenOn="true"
        android:text="@string/release_heading"
        android:textColor="#333333"
        android:textSize="40sp"
        android:textStyle="bold" 
        android:layout_weight="0" />
    
    <TextView 
        android:id="@+id/textReleaseWLANContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/release_wlan_content" 
        android:textColor="#666666"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="0"
        android:padding="20dp" />

    <ImageView
        android:id="@+id/imageStatusWLAN"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="0"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/error"
        android:contentDescription="@string/content_descr_image_status"
        android:visibility="gone" />
    
	<TextView
        android:id="@+id/textWLANInfo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:gravity="bottom|center_horizontal"
        android:padding="5dp"
        android:text="@string/wlan_info"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#888888"
        android:layout_marginBottom="20dp"/>
    

</LinearLayout>