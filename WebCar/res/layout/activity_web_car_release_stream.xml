<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0099cc"
    android:orientation="vertical"
    tools:context=".WebCarReleaseStreamActivity" >

   	<TextView
        android:id="@+id/textReleaseStreamingHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:keepScreenOn="true"
        android:text="@string/release_heading"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:textStyle="bold" 
        android:layout_weight="0" />
   	
 	<TextView 
        android:id="@+id/textReleaseStreamingContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/release_streaming_content" 
        android:textColor="#CEEDF9"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_weight="0"
        android:padding="20dp" />
 	
	<TextView 
        android:id="@+id/textReleaseStreamingIP"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_weight="0"
        android:padding="20dp" />
	
	<TextView 
        android:id="@+id/textReleaseStreamingContentNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/release_streaming_content_note" 
        android:textColor="#CEEDF9"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_weight="0"
        android:padding="20dp" />
	
	<TextView
        android:id="@+id/textStreamingInfo"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:gravity="bottom|center_horizontal"
        android:padding="5dp"
        android:text="@string/streaming_info"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>